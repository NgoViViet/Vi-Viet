<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ChiTietActivity">

    <!-- Tiêu đề màn hình -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Sinh Viên"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Mã sinh viên -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã Sinh Viên:"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/etMaSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên"
        android:enabled="false"
        android:textSize="16sp" />

    <!-- Họ tên sinh viên -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ Tên:"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />
    <EditText
        android:id="@+id/etHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên sinh viên"
        android:textSize="16sp" />

    <!-- Điểm chữ sinh viên -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Chữ:"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />
    <EditText
        android:id="@+id/etDiemChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập điểm chữ (A, B, C...)"
        android:textSize="16sp" />

    <!-- Nút lưu và hủy -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            android:textSize="18sp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textSize="18sp"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>
</LinearLayout>
